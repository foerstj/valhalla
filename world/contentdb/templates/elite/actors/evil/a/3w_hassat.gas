// Simple definition for a Hassat (Mad Doc's tiger)
[t:template,n:3W_base_hassat_tiger]
{
	doc = "Base Hassat Melee (Tiger)";
	specializes = actor_evil;
	[aspect]
	{
		model=m_c_eam_HG;
		[voice]
		{
			[die]			{ priority = high; * = s_e_die_tiger_SED;  }
			[enemy_spotted]	{ priority = high; * = s_e_call_tiger_SED; }
//			[hit_critical]	{ priority = low; * = s_e_hit_tiger_SED;  }
//			[hit_glance]	{ priority = low; * = s_e_hit_tiger_SED;  }
			[hit_solid]		{ priority = low; * = s_e_hit_tiger_SED;  }
		}
	}
	[body]
	{
		min_move_velocity	= 1.5;
		avg_move_velocity	= 3.500;
		[bone_translator]
		{
			body_anterior = bip01_head;
			body_mid = bip01_spine02;
			body_posterior = bip01_pelvis;
			kill_bone = bip01_spine02;
			shield_bone = shield_grip;
			weapon_bone = weapon_grip;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_eam_hassat_fs;
			[chore_attack]
			{
				chore_stances = 0,1;
				skrit = select_attack;
				[anim_files]
				{
					0mid = at;
					high = at-02;
					loww = at-03;
					extr = at-04;				
					qffg = dff;				
				}
				[anim_durations]
				{
					fs0 = 1.5;			
					fs1 = 1.5;
					fs6 = 1.5;
				}
			}
			[chore_default]
			{
				chore_stances = 0;
				skrit = infinite_loop;
				[anim_files] { 00=dfs; }
			}
			[chore_die]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 0;
				skrit = select_fidget;
				[anim_files] 
				{
					00 = dff;
					01 = dff-02;
					01 = dff-03;
				}
			}
			[chore_walk]
			{
				chore_stances = 0;
				skrit = select_walk;
				[anim_files] { 00=wl; }
			}	
		}
	}
	[common]
	{
		membership = hassat, monster;
	}
	[guts_manager]
    	{
		effect_name = melee_hit_2;
    	}
	[mind]
	{
		jat_fidget				= world\ai\jobs\common\job_fidget.skrit
		?curious				= 0.75
		&wander					= 0.8
		&social					= 0.1
		&interest				= interest
		&delay_min				= 6
		&delay_max				= 16
		&still					= false;
		on_enemy_spotted_alert_friends 		= true;
		jat_brain				= world\ai\jobs\common\brain_hero.skrit
		?actor_joins_existing_party		= true
		&actor_creates_own_party		= true
		&party_template				= "party_dsx_hassat";
		com_channels				= dyn_party, hassat;
		com_range				= 14.0;
		melee_engage_range			= 14.0;
		ranged_engage_range	 		= 14.0;
		sight_range				= 14.0;
	}
}

