[t:template,n:3W_dsx_scorpiot_base]
{
	category_name = "3W_evil_d";
	doc = "3W_dsx_scorpiot_base";
	specializes = actor_evil;
	[actor]
	{
		[skills]
		{
			strength =     119.8, 0;
			intelligence = 51.9, 0;
			dexterity =    81.1, 0;
			melee =        103, 0;
		}
	}
	[aspect]
	{
		experience_value = 608157;
		life             = 243;
		max_life         = 243;
		mana             = 243;
		max_mana         = 243;
		model = m_c_edm_scorpiot;
		textures:0 = b_c_edm_scorpiot;
		
		[voice]
		{
			[die]		{ priority = high;	* = s_e_die_scorpiot_SED;}
			[enemy_spotted]	{ priority = high; * = s_e_call_scorpiot_SED; }
		}	
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 202.5; //! Do by hand, on a curve.  For low values, ~==XP (6xp => 6damage; 90xp=> 50damage)
		damage_min = 165.7; //! Same as damage_max
	}
  [body]
    {
      avg_move_velocity = 2.0;
      [bone_translator]
	{
	  body_anterior = BoneHead;
	  body_mid = BoneBody;
	  body_posterior = BoneBody;
	  kill_bone = BoneBody;
	}
      [chore_dictionary]
	{
	  chore_prefix = a_c_edm_scorpiot_fs;
	  [chore_attack]
	    {
	      chore_stances = 0;
	      skrit = select_attack;
	      [anim_files]
		{
		  00 = at;
		  01 = at-01;
		  02 = at-02;
		}
	    }
	  [chore_default]
	    {
	      chore_stances = 0;
	      skrit = infinite_loop;
	      [anim_files] { 00=ds; }
	    }
	  [chore_die]
	    {
	      chore_stances = 0;
	      skrit = select_transition;
	      [anim_files] { 00=di-01; }
	    }
	  [chore_fidget]
	    {
	      chore_stances = 0;
	      skrit = select_fidget;
	      [anim_files] { 00=dff; }
	    }
	  [chore_walk]
	    {
	      chore_stances = 0;
	      skrit = select_walk;
	      [anim_files] { 00=wl; }
	    }
	}
    }
  [common]
    {
      screen_name = "SCORPIOT BASE"; 
      membership = automaton, monster, immune_freeze;
    }
  [generator_in_object]
    {
	child_template_name = dsx_scorpiot_skeleton;
	spawn_event = WE_EXPLODED;
	spawn_chance = 1.0;
    }
  [defend] { defense = 902; }

	[mind]
	{
		jat_fidget				= world\ai\jobs\common\job_fidget.skrit
		?curious				= 0.75
		&wander					= 0.8
		&social					= 0.2
		&interest				= interest
		&delay_min				= 1
		&delay_max				= 6
		&still					= false;
		on_enemy_spotted_alert_friends 		= true;
		jat_brain				= world\ai\jobs\common\brain_hero.skrit
		?actor_joins_existing_party		= true
		&actor_creates_own_party		= true
		&party_template				= "party_dsx_automaton";
		com_channels				= dyn_party, automaton;
		com_range				= 14.0;
		melee_engage_range			= 14.0;
		ranged_engage_range	 		= 14.0;
		personal_space_range 			= 0.7;
		sight_range				= 14.0;
		actor_life_ratio_low_threshold 		= 0.5;
		jat_die					= world\ai\jobs\actors\evil\job_die_explode.skrit;
		jat_startup				= world\ai\jobs\common\job_startup_reveal.skrit
		?try_face				= false;
        }

  [physics]
    {
		explode_when_killed = true;
		explosion_magnitude = 4.25;
		gib_gore_good = true;
		break_effect=generic_explosion;

		[break_particulate]
		{
			frag_glb_scorpiot_head = 1;
			frag_glb_scorpiot_back = 1;
			frag_glb_scorpiot_shoulder = 2;
			frag_glb_scorpiot_leg = 4;
			frag_glb_scorpiot_rarm = 1;
			frag_glb_scorpiot_larm = 1;
			frag_glb_scorpiot_piston = 2;
			frag_glb_scorpiot_blade = 1;
		}
    }
}

