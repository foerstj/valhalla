[t:template,n:3W_dsx_chitterskrag_base]
{
  category_name = "3W_evil_d";
  doc = "3W_dsx_chitterskrag_base";
  specializes = actor_evil;
  [actor]
    {
      [skills]
	{
	  strength =     160.7, 0;
	  intelligence = 77.5, 0;
	  dexterity =    116, 0;
	  melee =        120, 0;
	}
    }
  [aspect]
    {
      experience_value = 647250;
      life             = 268.8;
      max_life         = 268.8;
      mana             = 268.8;
      max_mana         = 268.8;
      model = m_c_edm_chs_pos_1;
      textures:0 = b_c_edm_chs;
      material = flesh;
		[voice]
		{
			[die]			{ priority = high;	* = s_e_die_chitterskrag_SED.gas;		}
			[enemy_spotted]	{ priority = high; * = s_e_call_braak_SED; }
		}

    }
  [attack]
    {
      attack_range = 0.5;
      damage_max = 118.2; //! Do by hand, on a curve.  For low values, ~==XP (6xp => 6damage; 90xp=> 50damage)
      damage_min = 96.7; //! Same as damage_max
    }
  [body]
    {
      avg_move_velocity = 2.5;
      [bone_translator]
	{
	  body_anterior = bip01_head;
	  body_mid = bip01_spine_01;
	  body_posterior = bip01_pelvis;
	  kill_bone = bip01_spine_01;
	 // shield_bone = shield_grip;
	 // weapon_bone = weapon_grip;
	}
      [weapon_scales]
	{
	  as_single_melee = 1.5, 1.5, 1.5;
	}
      [chore_dictionary]
	{
	  chore_prefix = a_c_edm_chs_fs;
	  [chore_attack]
	    {
	      chore_stances = 0;
	      skrit = select_attack;
	      [anim_files]
		{
		  00 = at;
		  01 = at-02;
		}
	    }
	  [chore_default]
	    {
	      chore_stances = 0;
	      skrit = infinite_loop;
	      [anim_files] { 00=ds; }
	    }
	  [chore_die]
	    {
	      chore_stances = 0;
	      skrit = select_transition;
	      [anim_files] { 00=di; }
	    }
	  [chore_fidget]
	    {
	      chore_stances = 0;
	      skrit = select_fidget;
	      [anim_files] { 00=dsf; }
	    }
	  [chore_walk]
	    {
	      chore_stances = 0;
	      skrit = select_walk;
	      [anim_files] 
		{ 
			00=wl; // 01=rl; //alternate 
		}
	    }
	  [chore_magic]
	  {
		chore_stances = 0;
		skrit = select_attack;
		[anim_files]{ 00=mg; }
	  }
	}
    }
  [common]
    {
      screen_name = "ChitterSkraal"; //--
      membership = chitterskrag, monster; //--
    }
  [defend] { defense = 1069.6; }

  [mind]
    {
	jat_fidget				= world\ai\jobs\common\job_fidget.skrit
	?curious				= 0.75
	&wander					= 0.8
	&social					= 0.1
	&interest				= interest
	&delay_min				= 6
	&delay_max				= 16
	&still					= false;
	on_enemy_spotted_alert_friends 		= true;
	jat_brain				= world\ai\jobs\common\brain_hero.skrit
	?actor_joins_existing_party		= true
	&actor_creates_own_party		= true
	&party_template				= "party_dsx_chitterskrag";
	com_channels				= dyn_party, chitterskrag;
	com_range				= 14.0;
	personal_space_range 			= 0.7;
	melee_engage_range			= 14.0;
	ranged_engage_range	 		= 14.0;
	sight_range				= 14.0;
	actor_life_ratio_low_threshold 		= 0.5;
     }
}
 

