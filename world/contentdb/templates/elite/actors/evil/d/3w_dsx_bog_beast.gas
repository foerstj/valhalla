[t:template,n:3W_dsx_bog_beast_base]
{
	category_name = "3W_evil_d";
	doc = "3W_dsx_bog_beast_base";
	specializes = actor_evil;
	[aspect]
	{
		model = m_c_edm_BOGBEAST_pos_1;
		[voice]
		{
			[die]			{ priority = high; * = s_e_die_bog_beast_SED; }
			[enemy_spotted]	{ priority = high; * = s_e_call_gorack_SED; }
			[hit_critical]	{ priority = low;  * = s_e_hit_bog_beast_SED; }
			[hit_glance]	{ priority = low;  * = s_e_hit_bog_beast_SED; }
			[hit_solid]		{ priority = low;  * = s_e_hit_bog_beast_SED; }
		}		
	}
	[body]
	{
		avg_move_velocity = 2.580000;	 // 2.080
		[bone_translator]
		{
			body_anterior = bip01_head;
			body_mid = bip01_spine2;
			body_posterior = bip01_pelvis;
			kill_bone = bip01_spine2;
			shield_bone = shield_grip;
			weapon_bone = weapon_grip;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_edm_la_fs;
			[chore_attack]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] { 00=at; }
			}
			[chore_default]
			{
				chore_stances = 0;
				skrit = infinite_loop;
				[anim_files] { 00=ds; }
			}
			[chore_die]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 0;
				skrit = select_fidget;
				[anim_files] { 00=dsf; }
			}
			[chore_magic]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] { 00=at; }
			}
			[chore_walk]
			{
				chore_stances = 0;
				skrit = select_walk;
				[anim_files] { 00=wl; }
			}
		}
	}
	[common]
	{
		screen_name = "Bog Beast";
		membership = monster;
	}	
	[mind]
	{
		jat_brain = world\ai\jobs\common\brain_hero.skrit
		?actor_joins_existing_party	= true;

		jat_fidget = world\ai\jobs\common\job_fidget.skrit;
// Meander seems to set the melee engage range to a ridiculously small number,
// which can't be overwritten with the specifier below. Go Figure
//		?meander = false
//		&still = false;
		
		melee_engage_range 		= 14;
		personal_space_range 	= 1.0;
		ranged_engage_range 	= 14.0;
		sight_range 			= 14.0;
	}
}

