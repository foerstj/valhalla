[t:template,n:3W_kikclaw_base]
{
	category_name = "3W_evil_d";
	doc = "3W_Kikclaw Base";
	specializes = actor_evil;
	
	[aspect] 
	{
		model = m_c_edm_kc_pos_1; 
		[voice]
		{
		[die]			{ priority = high; * = s_e_die_kikclaw;  }
			[enemy_spotted]	{ priority = high; * = s_e_call_kikclaw_SED; }
			[hit_critical]	{ priority = low; * = s_e_hit_kikclaw_SED;  }
			[hit_glance]	{ priority = low; * = s_e_hit_kikclaw_SED;  }
			[hit_solid]		{ priority = low; * = s_e_hit_kikclaw_SED;  }
		}	
	}
	[body]
	{
		avg_move_velocity = 4.50000;
		[bone_translator]
		{
			body_anterior = bip01_head;
			body_mid = bip01_spine1;
			body_posterior = bip01_pelvis;
			kill_bone = bip01_pelvis;
			shield_bone = bip01_l_hand;
			weapon_bone = bip01_r_hand;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_edm_kc_fs;
			[chore_attack]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] 
				{ 
					00=at;
					01=at-02; 
				}
			}
			[chore_default]
			{
				chore_stances = 0;
				skrit = infinite_loop;
				[anim_files] { 00=dfs; }
			}
			[chore_die]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 0;
				skrit = select_fidget;
				[anim_files] 
				{ 
					00=dff; 
					01=dsf; 
				}
			}
			[chore_walk]
			{
				chore_stances = 0;
				skrit = select_walk;
				[anim_files] { 00=wl; }
			}
		}
	}	
	
	[common] 
	{
		screen_name="Kikclaw";
		membership = kikclaw, monster;
 	}
	
	[defend] { defense=195.6; }
	
	[guts_manager]
	{
		effect_name = melee_hit_2;
	}
	
	[mind]	
	{	
		jat_fidget				= world\ai\jobs\common\job_fidget.skrit
		?curious				= 0.75
		&wander					= 0.60
		&approach_dist 				= 1.35
		&social					= 0.1
		&interest				= interest
		&delay_min				= 6
		&delay_max				= 16
		&still					= false;
		on_enemy_spotted_alert_friends 		= true;
		jat_brain				= world\ai\jobs\common\brain_hero.skrit
		?actor_joins_existing_party		= true
		&actor_creates_own_party		= true
		&party_template				= "party_dsx_kikclaw";
		com_channels				= dyn_party, kikclaw;
		com_range				= 8.0;
		melee_engage_range			= 10.0;
		ranged_engage_range	 		= 10.0;
		sight_range				= 10.0;
		personal_space_range 			= 0.5;
		inner_comfort_zone_range 		= 0.1;
		outer_comfort_zone_range 		= 6;
		actor_life_ratio_low_threshold 		= 0.5;	
	}
	
	[physics]
	{
		gib_gore_good = false;
		break_effect = feathers_red_evil;
		explode_when_killed = false;
	}
}

