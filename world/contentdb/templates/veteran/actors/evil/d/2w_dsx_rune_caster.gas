[t:template,n:2W_base_rune_caster]
{
	category_name = "2W_evil_d";
	doc = "2W_Base Rune Caster";
	specializes = actor_evil;

	[aspect]
		{
			[textures]	{ 0 = b_c_edm_rune_caster; }
			model = m_c_edm_sw_pos_1;
			[voice]
				{
					[cast]	{ * = s_e_attack_rune_caster; }
					[die]		{ priority = high; * = s_e_die_rune_caster_SED; }
					[hit_glance]	{ priority = low; * = s_e_hit_rune_caster_SED; }
				}
		}

	[body]
		{
			avg_move_velocity = 1.8;
			[bone_translator]
				{
					body_anterior = Bip01_Head;
					body_mid = Bip01_Spine1;
					body_posterior = Bip01_Pelvis;
					kill_bone = Bip01_Spine;
					shield_bone = shield_grip;
					weapon_bone = weapon_grip;
				}
			[chore_dictionary]
				{
					initial_chore = chore_none;
					chore_prefix = a_c_edm_sw_fs;
					[chore_attack]
						{
							chore_stances = 0;
							skrit = select_attack;
							[anim_files] { 00=mg; }
						}
					[chore_default]
						{
							chore_stances = 0;
							skrit = infinite_loop;
							[anim_files] { 00=dfs; }
						}
					[chore_die]
						{
							chore_stances = 0;
							skrit = select_transition;
							[anim_files] { 00=di; }
						}
					[chore_magic]
						{
							chore_stances = 0;
							skrit = select_attack;
							[anim_files] { 00=mg; }
						}
					[chore_fidget]
						{
							chore_stances = 0;
							skrit = select_fidget;
							[anim_files] { 00=dff; }
						}
					[chore_misc]
						{
							chore_stances = 0;
							skrit = select_transition;
							[anim_files] 
								{
									cast = mg; 
								}
						}
					[chore_walk]
						{
							chore_stances = 0;
							skrit = select_walk;
							[anim_files] { 00=wl; }
						}
				}
		}

	[mind]
		{
			jat_cast						= world\ai\jobs\common\job_cast.skrit
				?rand_spell						= true;
			jat_die							= world\ai\jobs\common\job_die_fade.skrit;


			actor_weapon_preference			= WP_MAGIC;
			actor_auto_switches_to_magic	= true;
			actor_auto_switches_to_karate	= false;
			actor_auto_switches_to_melee	= false;

			melee_engage_range				= 2;
			personal_space_range			= 0.7;
			on_enemy_entered_ocz_attack		= true;
			ranged_engage_range				= 13.0;
			sight_range						= 13.0;
		}

	[inventory]
		{
			drop_at_use_point = true;
			
		}
}

