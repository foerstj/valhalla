[t:template,n:2W_base_gremal]
{
	doc = "2W_gremal base";
	specializes = actor_evil;
	[aspect]
	{
		[voice]
		{
			[die]			{ priority = high; * = s_e_die_gremal; }
			[hit_critical]	{ priority = low; * = s_e_hit_gremal_SED; }
