[t:template,n:2W_dsx_skrubb_base]
{
  category_name = "2W_evil_d";
  doc = "2W_dsx_skrubb_base";
  specializes = actor_evil;
	  [actor]
	    {
		    [skills]
			{
			  strength =     29.4, 0;
			  intelligence = 10.9, 0;
			  dexterity =    13.8, 0;
			  melee =        47, 0;
			}
	    }
	  	[aspect]
		    {
		      experience_value = 26175;
		      life             = 1128;
		      max_life         = 1128;
		      mana             = 184;
		      max_mana         = 184;
		      model = m_c_edm_sb_pos_1;
		    textures:0 = b_c_edm_sb-03;
		      //textures:0 = b_c_edm_ph_melee;
		      draw_shadow = FALSE;
		      [voice]
				{
				  [cast]			{ * = s_e_attack_skrubb; }
				  [die]			{ priority = high; * = s_e_die_skrubb; }
				  [enemy_spotted]	{ priority = high; * = s_e_call_skrubb_small_SED; }
				  [hit_glance]	{ priority = low; * = s_e_hit_skrubb_SED; }
				}
		    }
	  	[attack]
		    {
		      attack_range = 0.5;
		      damage_max = 237.6; //! Do by hand, on a curve.  For low values, ~==XP (6xp => 6damage; 90xp=> 50damage)
		      damage_min = 165.6; //! Same as damage_max
		    }
	  	[body]
			{
				avg_move_velocity = 1;
				[bone_translator]
				{
					body_anterior = bone01;
					body_mid = bone01;
					body_posterior = bone01;
					kill_bone = bone09;
					shield_bone = bone01;
					weapon_bone = bone01;
				}
				[chore_dictionary]
				{
					initial_chore = chore_none;
					chore_prefix = a_c_edm_sb_fs;
					[chore_attack]
					{
						chore_stances = 0;
						skrit = select_attack;
						[anim_files] { 00=at; }
					}
					[chore_default]
					{
						chore_stances = 0;
						skrit = infinite_loop;
						[anim_files] { 00=ds; }
					}
					[chore_die]
					{
						chore_stances = 0;
						skrit = select_transition;
						[anim_files] { 00=di; }
					}
					[chore_misc]
					{
						chore_stances = 0;
						skrit = select_transition;
						[anim_files]
						{
							slep = ds;
							wake = rv;
						}
					}
					[chore_magic]
					{
						chore_stances = 0;
						skrit = select_attack;
						[anim_files] { 00=at-02; }
					}
					[chore_fidget]
					{
						chore_stances = 0;
						skrit = select_fidget;
						[anim_files] { 00=dff; }
					}
					[chore_walk]
					{
						chore_stances = 0;
						skrit = select_walk;
						[anim_files] { 00=rv; }
					}
				}
			}
		  [common]
		    {
		      screen_name = "Placeholder Skrubb Base"; //--
		      membership = monster;
		    }
	  	[defend] { defense = 362.7; }
		
		[mind]
	{
		jat_brain				= world\ai\jobs\common\brain_hero.skrit
		?actor_joins_existing_party		= false
		&actor_creates_own_party		= false;
		
		jat_die 				= world\ai\jobs\actors\evil\job_die_delete.skrit;
		jat_startup 							= world\ai\jobs\common\job_startup_reveal.skrit
			?invisible 							= true;

		jat_flee_from_object	= jat_none;
		jat_guard         		= jat_none;
		jat_move          		= jat_none;
		jat_patrol         		= jat_none;
	}
}

