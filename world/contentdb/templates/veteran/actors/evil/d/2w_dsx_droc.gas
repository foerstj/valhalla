[t:template,n:2W_base_droc]
{
	doc = "2W_Base Droc";
	specializes = actor_evil;
	[aspect]
	{
		//pholder melee
		model = m_c_edm_drc_pos_1;
		textures:0 = b_c_edm_drc;
	 
		[voice]
		{
			[die]			{ priority = high; * = s_e_die_droc_SED; }
			[enemy_spotted]	{ priority = high; * = s_e_call_droc_SED; }
			[hit_critical]	{ priority = low; * = s_e_hit_droc_SED; }
			[hit_glance]	{ priority = low; * = s_e_hit_droc_SED; }
			[hit_solid]		{ priority = low; * = s_e_hit_droc_SED; }
		}
	}
	[body]
	{
		min_move_velocity	= 1.5;
		avg_move_velocity	= 5.000000;
		[bone_translator]
		{
			body_anterior = bip01_head;
			body_mid = Bip01_Spine1;
			body_posterior = bip01_pelvis;
			kill_bone = Bip01_Spine1;
			// shield_bone = shield_grip;
			// weapon_bone = weapon_grip;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_edm_drc_fs;
			[chore_attack]
			{
				chore_stances = 0,6;
				skrit = select_attack;
				[anim_files]
				{
					00 = at;
					01 = at-02;
				}
			}
			[chore_default]
			{
				chore_stances = 0,6;
				skrit = infinite_loop;
				[anim_files] { 00=ds; }
			}
			[chore_die]
			{
				chore_stances = 0,6;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 0,6;
				skrit = select_fidget;
				[anim_files] { 00=dff; }
			}
			[chore_walk]
			{
				chore_stances = 0,6;
				skrit = select_walk;
				[anim_files] { 00=rl; }
			}
		}	
	}	
	[common]
	{
		membership = droc, monster;
	}
	[mind]
	{
		jat_fidget				= world\ai\jobs\common\job_fidget.skrit
		?curious				= 0.75
		&wander					= 0.8
		&social					= 0.1
		&interest				= interest
		&delay_min				= 6
		&delay_max				= 16
		&still					= false;

		on_enemy_spotted_alert_friends = true;

		jat_brain						= world\ai\jobs\common\brain_hero.skrit
		?actor_joins_existing_party		= true
		&actor_creates_own_party		= true
		&party_template					= "party_dsx_droc";

		com_channels					= dyn_party, droc;
		com_range						= 8.0;
		melee_engage_range				= 13.2;
		ranged_engage_range	 			= 13.5;
		sight_range						= 14.0;
		actor_life_ratio_low_threshold 	= 0.5;
	}
	[physics]
	{
		fire_effect = human_physics_fire;
	}
}


